<Window x:Class="nmct.ba.cashlessproject.tempui.Statistieken"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Statistieken" Height="700" Width="1050">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="180"/>
            </Grid.ColumnDefinitions>
            <TextBlock Style="{StaticResource txbTitel}">Statistieken</TextBlock>
            <Button Grid.Column="2">Terug</Button>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="1" Grid.Row="1" Style="{StaticResource txbStandaard}"> van:</TextBlock>
            <TextBlock Grid.Column="1" Grid.Row="2" Style="{StaticResource txbStandaard}">tot:</TextBlock>
            <TextBlock Grid.Column="1" Grid.Row="3" Style="{StaticResource txbStandaard}">Kassa:</TextBlock>
            <TextBlock Grid.Column="1" Grid.Row="4" Style="{StaticResource txbStandaard}">Product:</TextBlock>
            <TextBox Grid.Row="1" Grid.Column="2" Style="{StaticResource txtstand}"></TextBox>
            <TextBox Grid.Row="2" Grid.Column="2" Style="{StaticResource txtstand}"></TextBox>
            <ComboBox Style="{StaticResource cboInvul}"  Grid.Row="3" Grid.Column="2"></ComboBox>
            <ComboBox Style="{StaticResource cboInvul}"  Grid.Row="4" Grid.Column="2"></ComboBox>
            <Grid Grid.Column="2" Grid.Row="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1">Exporteer</Button>
                
            </Grid>
        </Grid>
    </Grid>
</Window>
